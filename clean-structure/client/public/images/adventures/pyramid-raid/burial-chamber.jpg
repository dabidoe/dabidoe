<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="torch">
      <stop offset="0%" style="stop-color:#ff8800;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#aa4400;stop-opacity:0.1" />
    </radialGradient>
  </defs>

  <!-- Very dark background -->
  <rect width="1920" height="1080" fill="#0a0806"/>

  <!-- Torchlight glows -->
  <ellipse cx="400" cy="300" rx="250" ry="400" fill="url(#torch)"/>
  <ellipse cx="1520" cy="300" rx="250" ry="400" fill="url(#torch)"/>

  <!-- Sarcophagi -->
  <g id="sarcophagus">
    <!-- Left alcoves -->
    <rect x="200" y="400" width="120" height="200" fill="#5a4a3a" stroke="#8b7355" stroke-width="3"/>
    <rect x="200" y="700" width="120" height="200" fill="#5a4a3a" stroke="#8b7355" stroke-width="3"/>

    <!-- Right alcoves -->
    <rect x="1600" y="400" width="120" height="200" fill="#5a4a3a" stroke="#8b7355" stroke-width="3"/>
    <rect x="1600" y="700" width="120" height="200" fill="#5a4a3a" stroke="#8b7355" stroke-width="3"/>
  </g>

  <!-- Central sarcophagus (larger) -->
  <rect x="810" y="500" width="300" height="400" fill="#3d3020" stroke="#d4af37" stroke-width="5"/>
  <rect x="820" y="510" width="280" height="380" fill="#5a4a3a"/>

  <!-- Mummy silhouettes in alcoves -->
  <g opacity="0.4">
    <ellipse cx="260" cy="500" rx="30" ry="40" fill="#8b7355"/>
    <rect x="245" y="540" width="30" height="80" fill="#8b7355"/>

    <ellipse cx="1660" cy="500" rx="30" ry="40" fill="#8b7355"/>
    <rect x="1645" y="540" width="30" height="80" fill="#8b7355"/>
  </g>

  <!-- Eerie green glow from central sarcophagus -->
  <ellipse cx="960" cy="700" rx="200" ry="100" fill="#2a5a2a" opacity="0.3"/>

  <!-- Hieroglyphics on central sarcophagus -->
  <text x="960" y="680" font-family="serif" font-size="36" fill="#d4af37" text-anchor="middle">
    ⚱ HEB-SENU ⚱
  </text>

  <text x="960" y="950" font-family="serif" font-size="48" fill="#8b7355" text-anchor="middle" font-weight="bold">
    BURIAL CHAMBER
  </text>
  <text x="960" y="1000" font-family="serif" font-size="24" fill="#5a4a3a" text-anchor="middle">
    The Hall of the Dead
  </text>
</svg>
