<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="goldGlow">
      <stop offset="0%" style="stop-color:#ffd700;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#d4af37;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#8b7355;stop-opacity:0.1" />
    </radialGradient>
  </defs>

  <!-- Rich background -->
  <rect width="1920" height="1080" fill="#1a1410"/>

  <!-- Golden glow emanating from center -->
  <ellipse cx="960" cy="700" rx="800" ry="400" fill="url(#goldGlow)"/>

  <!-- Piles of gold coins (simplified) -->
  <ellipse cx="600" cy="800" rx="200" ry="80" fill="#d4af37"/>
  <ellipse cx="1320" cy="800" rx="200" ry="80" fill="#d4af37"/>
  <ellipse cx="960" cy="850" rx="250" ry="100" fill="#ffd700"/>

  <!-- Central sarcophagus -->
  <rect x="760" y="600" width="400" height="300" fill="#8b7355" stroke="#ffd700" stroke-width="8"/>
  <rect x="770" y="610" width="380" height="280" fill="#d4af37"/>

  <!-- Three legendary items above sarcophagus -->
  <!-- Crown -->
  <g id="crown" transform="translate(860, 500)">
    <polygon points="0,30 20,0 40,30" fill="#ffd700" stroke="#d4af37" stroke-width="2"/>
    <rect x="5" y="30" width="30" height="20" fill="#ffd700" stroke="#d4af37" stroke-width="2"/>
    <circle cx="10" cy="15" r="4" fill="#ff0000"/>
    <circle cx="20" cy="10" r="4" fill="#0000ff"/>
    <circle cx="30" cy="15" r="4" fill="#00ff00"/>
  </g>

  <!-- War Mace -->
  <g id="mace" transform="translate(960, 500)">
    <rect x="-3" y="30" width="6" height="60" fill="#8b4513"/>
    <circle cx="0" cy="20" r="18" fill="#ffd700" stroke="#d4af37" stroke-width="2"/>
    <circle cx="-12" cy="12" r="6" fill="#d4af37"/>
    <circle cx="12" cy="12" r="6" fill="#d4af37"/>
    <circle cx="0" cy="30" r="6" fill="#d4af37"/>
  </g>

  <!-- Amulet -->
  <g id="amulet" transform="translate(1060, 500)">
    <ellipse cx="0" cy="35" rx="25" ry="30" fill="#00ffff" opacity="0.6" stroke="#ffd700" stroke-width="3"/>
    <circle cx="0" cy="35" r="12" fill="#ffd700"/>
    <path d="M -8,20 Q 0,10 8,20" stroke="#ffd700" stroke-width="2" fill="none"/>
  </g>

  <!-- Jeweled decorations -->
  <circle cx="400" cy="600" r="15" fill="#ff0000" opacity="0.8"/>
  <circle cx="500" cy="650" r="12" fill="#0000ff" opacity="0.8"/>
  <circle cx="1420" cy="600" r="15" fill="#00ff00" opacity="0.8"/>
  <circle cx="1520" cy="650" r="12" fill="#ff00ff" opacity="0.8"/>

  <!-- Name on sarcophagus -->
  <text x="960" y="760" font-family="serif" font-size="48" fill="#1a1410" text-anchor="middle" font-weight="bold">
    KA-AMON-RA
  </text>

  <text x="960" y="950" font-family="serif" font-size="48" fill="#d4af37" text-anchor="middle" font-weight="bold">
    TREASURE CHAMBER
  </text>
  <text x="960" y="1000" font-family="serif" font-size="24" fill="#8b7355" text-anchor="middle">
    The Pharaoh's Hoard
  </text>
</svg>
