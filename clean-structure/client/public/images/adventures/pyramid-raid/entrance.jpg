<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <!-- Sky gradient -->
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#e8b84d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d4a24a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="sand" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#d4a574;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c19a6b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="stone" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#8b7355;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#5a4a3a;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background sky -->
  <rect width="1920" height="600" fill="url(#sky)"/>

  <!-- Sand dunes -->
  <rect y="600" width="1920" height="480" fill="url(#sand)"/>
  <ellipse cx="400" cy="650" rx="300" ry="80" fill="#c19a6b" opacity="0.5"/>
  <ellipse cx="1400" cy="680" rx="350" ry="90" fill="#c19a6b" opacity="0.5"/>

  <!-- Pyramid structure -->
  <polygon points="960,200 500,700 1420,700" fill="url(#stone)"/>
  <polygon points="960,200 1420,700 1440,720 980,720" fill="#3d3020" opacity="0.6"/>

  <!-- Entrance doorway -->
  <rect x="860" y="500" width="200" height="200" fill="#1a1410"/>
  <rect x="865" y="505" width="190" height="190" fill="#0a0806"/>

  <!-- Jackal statues (simplified) -->
  <g id="statue-left">
    <rect x="750" y="600" width="60" height="100" fill="#8b7355"/>
    <circle cx="780" cy="580" r="30" fill="#8b7355"/>
    <polygon points="760,560 780,540 800,560" fill="#8b7355"/>
  </g>
  <g id="statue-right">
    <rect x="1110" y="600" width="60" height="100" fill="#8b7355"/>
    <circle cx="1140" cy="580" r="30" fill="#8b7355"/>
    <polygon points="1120,560 1140,540 1160,560" fill="#8b7355"/>
  </g>

  <!-- Hieroglyphic decorations (simple lines) -->
  <line x1="870" y1="480" x2="920" y2="480" stroke="#d4af37" stroke-width="3"/>
  <line x1="1000" y1="480" x2="1050" y2="480" stroke="#d4af37" stroke-width="3"/>
  <circle cx="950" cy="460" r="8" fill="#d4af37"/>

  <!-- Title text -->
  <text x="960" y="950" font-family="serif" font-size="48" fill="#8b7355" text-anchor="middle" font-weight="bold">
    PYRAMID ENTRANCE
  </text>
  <text x="960" y="1000" font-family="serif" font-size="24" fill="#5a4a3a" text-anchor="middle">
    The Gates of Ka-Amon-Ra
  </text>
</svg>
