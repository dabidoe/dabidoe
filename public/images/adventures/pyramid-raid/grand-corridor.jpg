<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="wall" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#5a4a3a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3d3020;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glow">
      <stop offset="0%" style="stop-color:#4a9eff;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#1a5a9a;stop-opacity:0.2" />
    </radialGradient>
  </defs>

  <!-- Dark background -->
  <rect width="1920" height="1080" fill="#1a1410"/>

  <!-- Perspective corridor walls -->
  <polygon points="0,0 400,300 400,780 0,1080" fill="url(#wall)"/>
  <polygon points="1920,0 1520,300 1520,780 1920,1080" fill="url(#wall)"/>

  <!-- Floor -->
  <polygon points="400,780 960,540 1520,780 1520,1080 400,1080" fill="#2d2416"/>

  <!-- Ceiling -->
  <polygon points="400,300 960,540 1520,300 1520,0 400,0" fill="#0a0806"/>

  <!-- Phosphorescent glow -->
  <ellipse cx="960" cy="400" rx="300" ry="200" fill="url(#glow)"/>
  <ellipse cx="600" cy="600" rx="80" ry="60" fill="url(#glow)"/>
  <ellipse cx="1320" cy="600" rx="80" ry="60" fill="url(#glow)"/>

  <!-- Hieroglyphic decorations on walls -->
  <g opacity="0.6">
    <!-- Left wall -->
    <rect x="100" y="400" width="40" height="60" fill="#d4af37"/>
    <circle cx="120" cy="350" r="15" fill="#d4af37"/>
    <polygon points="80,500 120,520 80,540" fill="#d4af37"/>

    <!-- Right wall -->
    <rect x="1780" y="400" width="40" height="60" fill="#d4af37"/>
    <circle cx="1800" cy="350" r="15" fill="#d4af37"/>
    <polygon points="1840,500 1800,520 1840,540" fill="#d4af37"/>
  </g>

  <!-- Three passage openings in distance -->
  <rect x="700" y="480" width="120" height="100" fill="#0a0806" opacity="0.8"/>
  <rect x="900" y="480" width="120" height="100" fill="#0a0806" opacity="0.8"/>
  <rect x="1100" y="480" width="120" height="100" fill="#0a0806" opacity="0.8"/>

  <text x="960" y="950" font-family="serif" font-size="48" fill="#8b7355" text-anchor="middle" font-weight="bold">
    GRAND CORRIDOR
  </text>
  <text x="960" y="1000" font-family="serif" font-size="24" fill="#5a4a3a" text-anchor="middle">
    Three Paths Diverge
  </text>
</svg>
